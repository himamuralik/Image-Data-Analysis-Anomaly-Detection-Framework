import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.metrics import confusion_matrix, roc_curve, auc

# ==========================================
# 1. PIXEL DISTRIBUTION ANALYSIS (The "Analyst" Part)
# ==========================================
def plot_pixel_distribution(clean_image_path, stego_image_path):
    """
    Compares pixel intensity histograms of a Clean vs. Stego image.
    This proves you aren't just running AI, but analyzing the DATA.
    """
    # Simulate loading images (Replace with cv2.imread in real project)
    # Using random data here for demonstration
    clean_pixels = np.random.normal(120, 20, 10000)
    stego_pixels = np.random.normal(122, 25, 10000) # Slightly different distribution

    plt.figure(figsize=(10, 5))
    sns.kdeplot(clean_pixels, color='blue', label='Clean Image Pixels', fill=True, alpha=0.3)
    sns.kdeplot(stego_pixels, color='red', label='Anomalous (Stego) Pixels', fill=True, alpha=0.3)
    
    plt.title("Statistical Analysis: Pixel Intensity Distribution")
    plt.xlabel("Pixel Intensity (0-255)")
    plt.ylabel("Frequency Density")
    plt.legend()
    plt.grid(True, alpha=0.3)
    plt.show()

# ==========================================
# 2. PERFORMANCE METRICS (Confusion Matrix)
# ==========================================
def plot_confusion_matrix(y_true, y_pred):
    """
    Visualizes how well the system distinguishes categories.
    """
    cm = confusion_matrix(y_true, y_pred)
    
    plt.figure(figsize=(6, 5))
    sns.heatmap(cm, annot=True, fmt='d', cmap='Blues', cbar=False,
                xticklabels=['Clean', 'Stego'], 
                yticklabels=['Clean', 'Stego'])
    plt.xlabel('Predicted Label')
    plt.ylabel('True Label')
    plt.title('Confusion Matrix: Anomaly Detection Performance')
    plt.show()

